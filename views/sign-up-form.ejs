<!DOCTYPE html>
<html lang="en">
<head>
  <title>Sign Up</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="form-container">
    <form class="form-card" action="/sign-up" method="POST">
      <h2>Sign Up</h2>
      <label for="firstName">First Name:</label>
      <input type="text" id="firstName" name="firstName" value="<%= userData.firstName %>" required />
      <% if (errors.find(e => e.path === 'firstName')) { %>
        <div class="error"><%= errors.find(e => e.path === 'firstName').msg %></div>
      <% } %>
      
      <label for="lastName">Last Name:</label>
      <input type="text" id="lastName" name="lastName" value="<%= userData.lastName %>" required />
      <% if (errors.find(e => e.path === 'lastName')) { %>
        <div class="error"><%= errors.find(e => e.path === 'lastName').msg %></div>
      <% } %>

      <label for="username">Username:</label>
      <input type="text" id="username" name="username" value="<%= userData.username %>" required />
      <% if (errors.find(e => e.path === 'username')) { %>
        <div class="error"><%= errors.find(e => e.path === 'username').msg %></div>
      <% } %>

      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required />
      <% if (errors.find(e => e.path === 'password')) { %>
        <div class="error"><%= errors.find(e => e.path === 'password').msg %></div>
      <% } %>

      <label for="confirmPassword">Confirm Password:</label>
      <input type="password" id="confirmPassword" name="confirmPassword" required />
      <% if (errors.find(e => e.path === 'confirmPassword')) { %>
        <div class="error"><%= errors.find(e => e.path === 'confirmPassword').msg %></div>
      <% } %>

      <label for="isAdmin">Is Admin:</label>
      <input type="checkbox" id="isAdmin" name="isAdmin" />

      <div class="form-buttons">
        <button type="submit">Submit</button>
        <button><a href="/">Back to homepage</a></button>
      </div>
    </form>
  </div>
</body>
</html>
