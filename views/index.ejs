<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Members Only</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <h1>Members Only</h1>
  </header>
  <main>
    <% if (locals.user) { %>
      <h1>WELCOME BACK <%= locals.user.username %></h1>
      <button><a href="/new-message">Create a new message</a></button>
      <% if (!locals.user.membershipstatus) { %>
        <button><a href="/membership-code">Enter membership code</a></button>
      <% } %>
      <a href="/log-out">LOG OUT</a>
    
      <h2>Messages</h2>
      <% messages.forEach((message) => { %>
        <div class="message">
          <p><%= message.message %></p>
          <% console.log(message.username) %>
          <% console.log(locals.user.membershipstatus) %>
          <% if (locals.user.membershipstatus) { %>
            <p><%= message.username %></p>
            <p><%= message.date.toLocaleDateString("en-US") %></p>
          <% } %>
        </div>
      <% }) %>
    <% } else { %>
      <button><a href="/sign-up">Sign Up</a></button>
      <button><a href="/log-in">Log In</a></button>
    <% } %>
  </main>
  <footer></footer>
</body>
</html>